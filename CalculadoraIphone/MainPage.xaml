<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIphone.MainPage"
             BackgroundColor="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" RowDefinitions="*, Auto" Padding="15, 0, 30, 15" >

            <Label x:Name="lblOperación"
                   Grid.Row="0"
                   Text=""
                   TextColor="LightGray"
                   FontSize="30"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="End"
                   />

            <ScrollView x:Name="ResultadoScrollView"
                        Grid.Row="1" 
                        Orientation="Horizontal"
                        HorizontalScrollBarVisibility="Never"
                        HorizontalOptions="End">

                <Label x:Name="lblResultado"
                       Text="0"
                       TextColor="White"
                       FontSize="80"
                       HorizontalTextAlignment="End"
                       VerticalTextAlignment="End"
                       LineBreakMode="NoWrap"
                       />

            </ScrollView>

        </Grid>

        <Grid Grid.Row="1" RowSpacing="7" ColumnSpacing="5" Padding="15,0,15,15">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Text="AC" x:Name="btnBorrarTodo" 
                    Grid.Row="0" Grid.Column="0" 
                    BackgroundColor="Gray" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="btnBorrarTodo_Clicked"/>

            <Button Text="⌫" x:Name="btnBorrarDigito"
                    Grid.Row="0" Grid.Column="1"
                    BackgroundColor="Gray" TextColor="White"
                    FontSize="28" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="btnBorrarDigito_Clicked"/>

            <Button Text="%" x:Name="btnPorcentaje"
                    Grid.Row="0" Grid.Column="2"
                    BackgroundColor="Gray" TextColor="White"
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="OperadorClickeado"/>

            <Button Text="÷" x:Name="btnDivision" 
                    Grid.Row="0" Grid.Column="3" 
                    BackgroundColor="Orange" TextColor="White" 
                    FontSize="40" 
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="OperadorClickeado"/>

            <Button Text="7" x:Name="btnNum7" 
                    Grid.Row="1" Grid.Column="0" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="8" x:Name="btnNum8" 
                    Grid.Row="1" Grid.Column="1" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="9" x:Name="btnNum9" 
                    Grid.Row="1" Grid.Column="2" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="x" x:Name="btnMultiplicacion" 
                    Grid.Row="1" Grid.Column="3" 
                    BackgroundColor="Orange" TextColor="White" 
                    FontSize="35" FontAttributes="Bold" 
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="OperadorClickeado"/>

            <Button Text="4" x:Name="btnNum4" 
                    Grid.Row="2" Grid.Column="0" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="5" x:Name="btnNum5" 
                    Grid.Row="2" Grid.Column="1" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="6" x:Name="btnNum6" 
                    Grid.Row="2" Grid.Column="2" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="-" x:Name="btnRestar" 
                    Grid.Row="2" Grid.Column="3" 
                    BackgroundColor="Orange" TextColor="White" 
                    FontSize="40" FontAutoScalingEnabled="False"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="OperadorClickeado"/>

            <Button Text="1" x:Name="btnNum1" 
                    Grid.Row="3" Grid.Column="0" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="2" x:Name="btnNum2" 
                    Grid.Row="3" Grid.Column="1" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="3" x:Name="btnNum3" 
                    Grid.Row="3" Grid.Column="2" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="+" x:Name="btnSumar" 
                    Grid.Row="3" Grid.Column="3" 
                    BackgroundColor="Orange" TextColor="White" 
                    FontSize="40"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="OperadorClickeado"/>

            <Button Text="★" x:Name="btnEstrella"
                    Grid.Row="4" Grid.Column="0"
                    BackgroundColor="#3D3D3D" TextColor="White"
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"/>

            <Button Text="0" x:Name="btnNum0" 
                    Grid.Row="4" Grid.Column="1"
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="80"
                    Clicked="BotonNumericoClickeado"/>

            <Button Text="," x:Name="btnComa" 
                    Grid.Row="4" Grid.Column="2" 
                    BackgroundColor="#3D3D3D" TextColor="White" 
                    FontSize="24" FontAttributes="Bold"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="btnComa_Clicked"/>

            <Button Text="=" x:Name="btnIgual" 
                    Grid.Row="4" Grid.Column="3" 
                    BackgroundColor="Orange" TextColor="White" 
                    FontSize="40"
                    HeightRequest="80" WidthRequest="80" CornerRadius="40"
                    Clicked="btnIgual_Clicked"/>
        </Grid>

    </Grid>

</ContentPage>